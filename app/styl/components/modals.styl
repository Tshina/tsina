@import "nib"
@import "vars"
@import "mixins"

.modal
  display none
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  //display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  &.\--style-2
    .modal__content
      width: 1110px;
  &__hider
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    cursor: pointer;
    background-color: rgba(0, 0, 0, 0.37);
  &__content
    position: relative;
    z-index: 2;
    background-color: white;
    box-shadow: 0px 24px 32px rgba(8, 35, 48, 0.24);
    border-radius: 60px 10px;
    padding 30px
  &__close
    position: absolute;
    right: 0;
    top: -30px;
    z-index: 1;
    color: white;
    font-size: 28px;
    display: block;
    width: 30px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    cursor: pointer;
    transition color .3s ease-in-out
    &:hover
      color accent-red
