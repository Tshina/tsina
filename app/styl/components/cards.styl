      line-height: 135%;
      padding: 32px 12px;
    @media (max-width: max-medium)
      font-size: 12px;
      line-height: 130%;
      padding: 15px;
  &__author
    font-weight: 600;
    font-size: 14.5px;
    line-height: 150%;
    letter-spacing: 0.02em;
    color: #768592;
    margin-top: 4px;
    @media (max-width: max-extra-large)
      font-size: 14px;
    @media (max-width: max-medium)
      font-size: 13px;

.type-card
  margin 0 15px 26px
  width: 255px;
  background-color white
  border-radius: 25px 5px;
  box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
  @media (max-width: max-extra-large)
    margin: 0 9px 3px;
    width: 220px;
  @media (max-width: max-medium)
    width: 230px;
    margin: 0 10px 10px;
  &:hover
    position: relative;
    z-index: 5;
    @media (min-width: max-medium)
      border-radius: 25px 5px 0 0;
    .type-card__title
      color accent-dark
      text-decoration-color: #4a4a4a;
    .type-card__main-sect-btm
      opacity 1
      pointer-events all
      visibility visible
      transform: translateY(0);
      box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
    .type-card__main-controls
      @media (min-width: max-medium)
        border-radius: 0
  &.\--new
    box-shadow: 0px 4px 8px rgba(0, 204, 155, 0.24);
    &:hover
      .type-card__main-sect-btm
        box-shadow: 0px 4px 8px rgba(0, 204, 155, 0.24);
    .type-card__label
      background-color accent-green
      text-shadow: -1px 1px 0px #26A69A;
      box-shadow: 0px 2px 0px #26A69A;
  &.\--best-price
    box-shadow: 0px 4px 8px rgba(126, 87, 194, 0.24);
    &:hover
      .type-card__main-sect-btm
        box-shadow: 0px 4px 8px rgba(126, 87, 194, 0.24);
    .type-card__label
      background-color #7E57C2
      text-shadow: -1px 1px 0px #673AB7;
      box-shadow: 0px 2px 0px #673AB7;
  &.\--bestseller
    box-shadow: 0px 4px 8px rgba(255, 171, 0, 0.24);
    &:hover
      .type-card__main-sect-btm
        box-shadow: 0px 4px 8px rgba(255, 171, 0, 0.24);
    .type-card__label
      background-color #FFAB00
      text-shadow: -1px 1px 0px #FF8F00;
      box-shadow: 0px 2px 0px #FF8F00;
  &.\--simple-banner
    box-shadow: none;
    overflow: hidden;
    &:hover
      border-radius: 25px 5px;
    .type-card__img
      position relative
      height: 385px;
      border-bottom: none;
      background-position: center;
      background-size: cover;
      @media (max-width: max-extra-large)
        height: 347px;
      @media (max-width: max-medium)
        height: 330px;
  &.\--model
    .type-card__main-controls
      margin-top: 12px;
      @media (max-width: max-medium)
        margin-top: 3px;
        padding: 0 10px 8px;
    .type-card__main-controls-block
      @media (max-width: max-extra-large)
        padding-top: 3px;
      @media (max-width: max-medium)
        padding-top: 0
      &:first-of-type
        padding-top: 0;
        align-items: flex-start;
        .type-card__price
          margin-bottom: 3px
    .type-card__price-tip
      @media (max-width: max-medium)
        font-size: 11px;
        line-height: 130%;
  &__img
    display block
    border-bottom: 2px solid #DFE2E9;
    height: 192px;
    text-decoration none
    background-repeat: no-repeat;
    background-position: bottom center;
    background-size: contain;
    @media (max-width: max-extra-large)
      height 166px
    @media (max-width: max-medium)
      height: 161px;
  &__labels
    display: flex;
    flex-wrap: wrap;
    justify-content space-between
    &-left
      width: 55%;
      display: inline-block;
      @media (max-width: max-medium)
        width: 51%;
    &-right
      width 38%
      display: inline-block;
      text-align right
      @media (max-width: max-extra-large)
        width 44%
      @media (max-width: max-medium)
        width: 42%;
  &__brand
    display: block;
    margin: 15px 0 6px;
    @media (max-width: max-extra-large)
      margin: 10px 0 6px;
    @media (max-width: max-medium)
      margin: 11px 0 7px;
    img
      width: 100%;
      height: 100%;
      object-fit: contain;
  &__type-label
    width: 30px;
    height: 30px;
    display: inline-block;
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    margin-left: 18px;
    @media (max-width: max-extra-large)
      margin-left: 10px;
    &.\--sun
      background-image: url(/img/svg/sun.svg)
  &__label
    width: 96px;
    height: 36px;
    color white
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 5px;
    border-radius: 0px 5px 0px 25px;
    text-align center
    font-weight bold
    font-size: 12.75px;
    line-height: 115%;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  &__main
    padding: 10px 0 0
    position relative
    z-index 1
    @media (max-width: max-extra-large)
      padding: 8px 0 0;
    @media (max-width: max-medium)
      padding: 8px 0 0;
    &-sect
      //
      &-top
        padding: 0 15px;
        position: relative;
        z-index: 1;
        background-color: white;
        @media (max-width: max-extra-large)
          padding: 0 10px;
      &-btm
        opacity 0
        pointer-events none
        visibility hidden
        padding: 13px 19px;
        position: absolute;
        left: 0;
        right: 0;
        top: 100%;
        z-index: 1
        background-color: #ECEFF1;
        border-radius: 0px 0px 25px 5px;
        transform: translateY(-50%);
        transition all .3s ease-in-out
        @media (max-width: max-large)
          display none
    &-controls
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding: 0 15px 17px;
      position: relative;
      z-index: 1;
      background-color: white;
      border-radius: 0 0 25px 5px;
      @media (max-width: max-extra-large)
        padding: 0 10px 13px;
      @media (max-width: max-medium)
        padding: 0 15px 11px;
      &-block
        display: flex;
        flex-direction: column;
        justify-content: inherit;
        align-items: flex-end;
        &:first-of-type
          padding-top: 4px;
          width: 43%;
          @media (max-width: max-extra-large)
            padding-top: 0;
          @media (max-width: max-medium)
            width: 42%;
        &:last-of-type
          width: 53%;
        .btn
          @media (max-width: max-extra-large)
            min-width: 104px;
            font-size: 12px;
            height 40px
  &__title
    font-weight: 600;
    font-size: 16px;
    letter-spacing: 0.02em;
    color accent-dark
    line-height: 24px;
    height: calc(24px * 2);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-decoration: underline;
    text-decoration-color: transparent;
    transition text-decoration-color .3s ease-in-out
    @media (max-width: max-extra-large)
      font-size: 15px;
      line-height: 22px
      height: calc(22px * 2);
    @media (max-width: max-medium)
      font-size: 14px;
      line-height: 20px
      height: calc(20px * 2);
  &__info
    &-type
      margin: 4px 0 10px;
      font-size: 16px;
      line-height: 150%;
      letter-spacing: 0.02em;
      color: #566069;
      @media (max-width: max-extra-large)
        font-size 15px
      @media (max-width: max-medium)
        font-size: 14px;
        line-height: 130%;
        margin: 4px 0 7px;
    &-icons
      display none
    &-modal
      opacity 0
      pointer-events none
      visibility hidden
      width: 270px;
      box-shadow: 0px 24px 32px rgba(8, 35, 48, 0.24);
      background-color white
      border: 3px solid #C9CFDA;
      border-radius: 60px 10px;
      position: absolute;
      text-align center
      left: 101%;
      z-index: 4;
      padding: 21px 25px;
      transition all .3s ease-in-out
      @media (max-width: max-large)
        display none
      &-title
        font-weight: 600;
        font-size: 16px;
        line-height: 150%;
        letter-spacing: 0.02em;
        margin-bottom: 15px;
      &-img
        margin-bottom: 4px;
        img
          max-width: 100%;
      &-text
        text-align left
        margin-bottom: 5px;
        &-label
          font-weight: 600;
          font-size: 16px;
          line-height: 150%;
          letter-spacing: 0.02em;
        &-value
          font-size: 12.75px;
          line-height: 150%;
          letter-spacing: 0.04em;
  &__further-info
    display: flex;
    flex-wrap: wrap;
    align-items: baseline;
    margin-bottom: 3px;
    &-label
      font-size: 11.75px;
      line-height: 135%;
      letter-spacing: 0.04em;
      color: #666666;
      width: 52%;
    &-value
      font-weight: 600;
      font-size: 12.75px;
      line-height: 150%;
      letter-spacing: 0.04em;
      color accent-dark
      width: 48%;
  &__price-tip
    font-size: 12.75px;
    line-height: 150%;
    letter-spacing: 0.04em;
    color: #566069;
  &__price
    font-weight: bold;
    font-size: 22px;
    line-height: 22px;
    color accent-red
    letter-spacing: 0.04em;
    white-space nowrap
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    margin-bottom: 9px;
    @media (max-width: max-extra-large)
      font-size: 20px;
      line-height: 150%;
      margin-bottom: 1px;
    &.\--old
      font-size: 12.75px;
      line-height: 19px
      color: #566069;
      position relative
      display: inline-flex;
      margin-bottom: 3px;
      @media (max-width: max-extra-large)
        margin-bottom: 9px;
      @media (max-width: max-medium)
        margin-bottom: 10px;
      &:before
        content ''
        background-color accent-red
        position: absolute;
        z-index: 1;
        height: 1px;
        width: 100%;
        transform: rotateZ(8deg) translateY(9px);
      span
        font-size: 11.75px;
        line-height: 13px
        margin-left: 2px;
        @media (max-width: max-medium)
          line-height: 14px;
    span
      font-weight: normal;
      font-size: 11.75px;
      line-height: 18px;
      letter-spacing: 0.04em;
      @media (max-width: max-medium)
        line-height: 23px;
  &__profit
    font-size: 11.75px;
    line-height: 135%;
    letter-spacing: 0.04em;
    color: #666666
    text-align: left;
    width: 100%;
    @media (max-width: max-medium)
      font-size: 11px;
      line-height: 130%;
    span
      font-weight: 600;
      font-size: 14.5px;
      line-height: 150%;
      letter-spacing: 0.02em;
      color accent-red
      border-bottom: 1px dashed accent-red
  &__quick-order
    font-weight: bold;
    font-size: 12.75px;
    line-height: 115%;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    border: none;
    outline: 0;
    background-color: transparent;
    white-space: nowrap;
    padding: 0;
    color accent-red
    margin-top: 18px;
    cursor pointer
    transition color .3s ease-in-out
    @media (max-width: max-extra-large)
      margin-top: 9px;
      font-size: 12px;
      line-height: 130%;
      white-space: normal;
    &:hover
      color accent-dark
  &__banner-brand
    padding: 0 15px;
    text-align: center;
    top: 46px;
    position: absolute;
    left: 0;
    right: 0;
    img
      max-width 100%
  &__banner
    display none
    width 100%
    height: 134px;
    position relative
    border-radius: 0px 0px 25px 5px;
    background-repeat: no-repeat;
    background-position: bottom center;
    background-size: cover;
    @media (max-width: max-extra-large)
      height: 111px;
    &-brand-img
      display: inline-block;
      position: absolute;
      left: 31px;
      bottom: 28px;
      @media (max-width: max-extra-large)
        left: 18px;
        bottom: 21px;

