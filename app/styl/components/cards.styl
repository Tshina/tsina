@import "nib"
@import "vars"
@import "mixins"

.action-card
  display flex !important
  flex-wrap wrap
  width: 540px !important;
  margin: 0 10px 10px
  background-color white
  box-shadow: 0px 4px 8px rgba(8, 35, 48, 0.24);
  border-radius: 60px 10px;
  font-size: 12.75px;
  line-height: 150%;
  letter-spacing: 0.04em;
  @media (max-width: max-extra-large)
    width: 483px !important;
    font-size: 12.5px;
    line-height: 135%;
  @media (max-width: max-medium)
    width: 230px !important
    font-size: 12px;
    line-height: 130%;
    letter-spacing: 0.02em;
    flex-direction: column;
  &__img
    width: 45%;
    padding: 14px 6px 13px 17px;
    position: relative;
    @media (max-width: max-extra-large)
      height: 153px;
      padding: 8px 7px 10px 9px;
    @media (max-width: max-medium)
      width: 100%;
      padding: 11px 10px 6px 10px;
      height: 158px;
    img
      border-radius: 50px 5px 30px;
      overflow: hidden;
      width: 100%;
      height: 100%;
      object-fit: contain;
  &__tags
    position: absolute;
    right: 0;
    top: 7px;
    display: flex;
    flex-direction: column;
    @media (max-width: max-extra-large)
      top: 3px;
    @media (max-width: max-medium)
      top: 5px;
      right: 2px;
  &__info
    width: 55%;
    padding: 11px 15px 8px 6px;
    text-align: left;
    @media (max-width: max-medium)
      width 100%
      padding: 0 10px 20px 10px
  &__date
    color: #768592
    margin-bottom: 2px;
    @media (max-width: max-extra-large)
      margin-bottom: 0;
    @media (max-width: max-medium)
      margin-bottom: 7px;
  &__title
    font-weight: bold;
    font-size: 18px;
    line-height: 145%;
    letter-spacing: 0.02em;
    height: calc(27px * 3);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color #0C0033
    margin-bottom: 3px;
    @media (max-width: max-extra-large)
      font-size: 16.5px;
      max-height: 71px;
      margin-bottom: 7px;
    @media (max-width: max-medium)
      font-size: 15.5px;
      line-height: 140%;
      height: calc(27px * 4);
      -webkit-line-clamp: 4;
      max-height: 84px;
  &__desc
    color: #566069;
    height: calc(19px * 2);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    @media (max-width: max-extra-large)
      max-height: 34px;
    @media (max-width: max-medium)
      height: calc(19px * 3);
      -webkit-line-clamp: 3;
      max-height: 48px;

.advantage
  width: 18%;
  text-align: center;
  @media (max-width: max-medium)
    width: 100%;
    text-align: left;
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 15px;
  &__img
    height: 100px;
    @media (max-width: max-large)
      height: 72px;
    @media (max-width: max-medium)
      width: 60px;
      height: 54px;
    img
      max-height 100%
  &__text
    font-size: 12.75px;
    line-height: 150%;
    letter-spacing: 0.04em;
    padding: 5px 8px;
    @media (max-width: max-large)
      padding: 12px 3px;
      font-size: 12.5px;
      line-height: 135%;
    @media (max-width: max-medium)
      letter-spacing: 0.02em;
      padding: 0 0 0 21px;
      width: calc(100% - 60px);
      font-size: 12px;
      line-height: 130%;
      display: flex;
      align-items: center;

.brand-card
  width 350px !important
  margin 0 14px 33px
  background-color: white;
  @media (max-width: max-extra-large)
    width: 315px !important;
    margin: 0 10px 35px;
  @media (max-width: max-medium)
    width: 232px !important;
    margin: 0 14px 9px;
  &.\--comfort
    .brand-card__header
      border-radius: 60px 10px 0px 0px;
      @media (max-width: max-extra-large)
        border-radius: 60px 10px 0px 0px;
    .brand-card__content
      border-radius: 0 0 60px 10px;
  &.\--premium
    box-shadow: 0px 16px 24px rgba(215, 75, 72, 0.24);
    border-radius 30px
    @media (max-width: max-extra-large)
      box-shadow: 0px 4px 8px rgba(215, 75, 72, 0.44);
    .brand-card__header
      border-color accent-red
      background-color accent-red
      color white
      @media (max-width: max-extra-large)
        border-radius: 20px 20px 0px 0px;
      @media (max-width: max-medium)
        border-radius 30px 30px 0 0
    .brand-card__content
      border-color transparent
  &.\--standart
    .brand-card__header
      border-radius: 10px 60px 0 0;
    .brand-card__content
      border-radius: 0 0 10px 60px;
  &__header
    font-weight: 600;
    font-size: 20.25px;
    line-height: 150%;
    letter-spacing: 0.04em;
    padding: 16px 10px;
    color accent-dark
    background-color #DFE2E9;
    border: 4px solid #DFE2E9;
    border-radius: 30px 30px 0px 0px;
    @media (max-width: max-extra-large)
      font-size: 18px;
      padding: 12px 10px;
    @media (max-width: max-medium)
      font-size: 16.75px;
      line-height: 111%;
      border-radius: 30px 6px 0px 0px;
      padding: 10px;
  &__content
    padding: 21px 0 20px;
    border: 4px solid #dfe2e9;
    border-top: none;
    @media (max-width: max-extra-large)
      padding: 21px 0 23px;
    @media (max-width: max-medium)
      border-width 3px
      padding: 21px 0 17px;
      border-radius: 0 0 47px 10px;
  &__imgs
    display: flex;
    flex-wrap: wrap;
    margin-bottom: 17px;
    @media (max-width: max-medium)
      margin-bottom: 13px;
    &-item
      width 50%
      height: 49px;
      @media (max-width: max-extra-large)
        height: 46px;
      @media (max-width: max-medium)
        height: 40px;

