      height: 206px;
    @media (max-width: max-medium)
      padding: 10px 11px 0 11px;
      height: 150px;
    img
      border-radius: 50px 5px 30px;
      overflow: hidden;
      width: 100%;
      height: 100%;
      object-fit: contain;
  &__labels
    position: absolute;
    right: 6px;
    top: 7px;
    display: flex;
    flex-direction: column;
  &__info
    padding: 5px 15px 25px;
    text-align: left;
    @media (max-width: max-medium)
      padding: 5px 10px 25px;
  &__date
    color: #768592
    margin-bottom: 2px;
    @media (max-width: max-medium)
      margin-bottom: 9px;
  &__title
    font-weight: bold;
    font-size: 18px;
    line-height: 145%;
    letter-spacing: 0.02em;
    height: calc(27px * 3);
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    color #0C0033
    margin-bottom: 17px;
    @media (max-width: max-extra-large)
      font-size: 16.5px;
      max-height: 71px;
      margin-bottom: 14px;
    @media (max-width: max-medium)
      font-size: 15.5px;
      line-height: 140%;
      height: calc(27px * 4);
      -webkit-line-clamp: 4;
      max-height: 84px;
      margin-bottom: 13px;
  &__tags
    .btn
      margin-right: 11px;

.review-card
  width 350px !important
  margin 0 14px
  text-align: right;
  @media (max-width: max-extra-large)
    width: 315px !important;
    margin: 0 10px 14px;
  @media (max-width: max-medium)
    width: 232px !important;
    margin: 0 14px 9px;
  &__text
    background-color: white;
    border: 0.5px solid #FFFFFF;
    border-radius: 30px 5px;
    padding: 30px;
    font-size: 12.75px;
    line-height: 150%;
    text-align: center;
    letter-spacing: 0.04em;
    color: #0C0033;
    @media (max-width: max-extra-large)
      font-size: 12.5px;
      line-height: 135%;
      padding: 32px 12px;
    @media (max-width: max-medium)
      font-size: 12px;
      line-height: 130%;
      padding: 15px;
  &__author
    font-weight: 600;
    font-size: 14.5px;
    line-height: 150%;
    letter-spacing: 0.02em;
    color: #768592;
    margin-top: 4px;
    @media (max-width: max-extra-large)
      font-size: 14px;
    @media (max-width: max-medium)
      font-size: 13px;
